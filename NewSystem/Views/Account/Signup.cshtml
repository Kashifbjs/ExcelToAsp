@model SignupViewModel
@{
	ViewData["Title"] = "Signup";
	Layout = "~/Views/Shared/_LayoutLoginSignup.cshtml";
}

<form method="post">
	<div class="border p-3 mt-4" style="margin-left:200px; margin-right:200px">
		<div class="row pb-3">
			<h2>
				Sign Up
			</h2>
			<hr />
		</div>
		<h6 class="text-success text-center">
			@TempData["SuccessMsg"]
			@TempData["ErrorMsg"]
		</h6>
		<div class="row m-2 mb-3">
			<label asp-for="UserName"></label>
			<input asp-for="UserName" type="text" class="form-control" />
			<span asp-validation-for="UserName" class="text-danger"></span>
		</div>
		<div class="row m-2 mb-3">
			<label asp-for="UserEmail"></label>
			<input asp-for="UserEmail" type="email" class="form-control" />
			<span asp-validation-for="UserEmail" class="text-danger"></span>
		</div>
		<div class="row m-2 mb-3">
			<label asp-for="UserPassword"></label>
			<input id="Password" asp-for="UserPassword" type="password" class="form-control" />
			<i id="OpenPassword" class="bi bi-eye-fill" onclick="ChangeType1('Password')" style="margin-top: -35px; margin-left: 800px; cursor: pointer;"></i>
			<i id="ClosePassword" class="bi bi-eye-slash-fill" onclick="ChangeType2('Password')" style="margin-left: 800px; margin-top: -35px; cursor: pointer; display:none;"></i>
			<span asp-validation-for="UserPassword" class="text-danger"></span>
		</div>
		<div class="row m-2 mb-3">
			<label asp-for="ConfirmPassword"></label>
			<input id="Confirm" asp-for="ConfirmPassword" type="password" class="form-control" />
			<i id="OpenConfirm" class="bi bi-eye-fill" onclick="ChangeType1('Confirm')" style="margin-top: -35px; margin-left: 800px; cursor: pointer;"></i>
			<i id="CloseConfirm" class="bi bi-eye-slash-fill" onclick="ChangeType2('Confirm')" style="margin-left: 800px; margin-top: -35px; cursor: pointer; display:none;"></i>
			<span asp-validation-for="ConfirmPassword" class="text-danger"></span>
		</div>
		<div class="row m-2 mb-3">
			<label asp-for="UserPhone"></label>
			<input asp-for="UserPhone" type="number" class="form-control" />
			<span asp-validation-for="UserPhone" class="text-danger"></span>
		</div>
		<div class="row m-2 mb-3">
			<label asp-for="UserShopName"></label>
			<input asp-for="UserShopName" type="text" class="form-control" />
			<span asp-validation-for="UserShopName" class="text-danger"></span>
		</div>
		<input asp-for="RoleId" type="hidden" value="2" class="form-control" />
		<input asp-for="IsActive" type="hidden" value="false" class="form-control" />
		<button class="btn btn-primary" type="submit">
			Sign Up
		</button>
		<a asp-action="Login" asp-controller="Account">Already a rigistered? Sign in</a>
	</div>

</form>

<script type="text/javascript">
	function ChangeType1(InputId) {
		document.getElementById("Open" + InputId).style.display = "none";
		document.getElementById("Close" + InputId).style.display = "block";
		document.getElementById(InputId).type = "text";
	}

	function ChangeType2(InputId) {
		document.getElementById("Open" + InputId).style.display = "block";
		document.getElementById("Close" + InputId).style.display = "none";
		document.getElementById(InputId).type = "password";
	}
</script>
