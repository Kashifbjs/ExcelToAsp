@model IEnumerable<Vendor>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-4">
    <h6 class="text-success text-center">
        @TempData["SuccessMsg"]
        @TempData["ErrorMsg"]
    </h6>
    <div class="row p-3">
        <div class="col-6">
            <h2>Vendors</h2>
        </div>
        <div class="col-6 text-end">
            <a class="btn btn-primary" asp-action="Create" asp-controller="Vendor">
                <i class="bi bi-plus-circle"></i> Create New Vendor
            </a>
            <a class="btn btn-primary" asp-action="Requests" asp-controller="Vendor">
                <i class="bi bi-envelope-exclamation"></i> Vendor Requests
            </a>
        </div>
    </div>
</div>

<div class="row p-3">
    <div class="col-6">
        <h4>List of Vendors</h4>
    </div>
    @*<div class="col-6 text-end">
        <select class="form-select-sm">
            <option>Select Vendors</option>
            @foreach (var VenData in Model)
            {
                <option>@VenData.VendorName</option>
            }
            
        </select>
    </div>*@
</div>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>
                Vendor ID
            </th>
            <th>
                Vendor Name
            </th>
            <th>
                Vendor Email
            </th>
            <th>
                Vendor Contact
            </th>
            <th>
                Vendor Shop Name
            </th>
            <th>
                View
            </th>
            <th>
                Action
            </th>
            <th>
                Enable / Disable
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var VenData in Model)
        {
            <tr>
                <td>
                    @VenData.VendorId
                </td>
                <td>
                    @VenData.VendorName
                </td>
                <td>
                    @VenData.VendorEmail
                </td>
                <td>
                    @VenData.VendorPhone
                </td>
                <td>
                    @VenData.VendorShopName
                </td>
                <td role="group">
                    <a asp-action="ViewVendor" asp-controller="Vendor" asp-route-id="@VenData.Id" style="text-decoration:none"><i class="bi bi-pencil-square"></i> View</a>
                </td>
                <td role="group">
                    <a asp-action="Edit" asp-controller="Vendor" asp-route-id="@VenData.Id" style="text-decoration:none"><i class="bi bi-pencil-square"></i> Edit</a>
                </td>
                <td>
                    @if (VenData.IsActive == true)
                    {
                        <a asp-action="Delete" asp-controller="Vendor" asp-route-id="@VenData.Id" style="text-decoration:none"><i class="bi bi-x-circle"></i> Disable</a>
                    }
                    else
                    {
                        <a asp-action="Delete" asp-controller="Vendor" asp-route-id="@VenData.Id" style="text-decoration:none"><i class="bi bi-plus-circle"></i> Enable</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>